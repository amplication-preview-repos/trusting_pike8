datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Purchase {
  amount      Float?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  image       Image?    @relation(fields: [imageId], references: [id])
  imageId     String?
  paymentDate DateTime?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model Collection {
  createdAt   DateTime @default(now())
  createdBy   String?
  description String?
  id          String   @id @default(cuid())
  title       String?
  updatedAt   DateTime @updatedAt
}

model Image {
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  purchases   Purchase[]
  title       String?
  updatedAt   DateTime   @updatedAt
  uploadedBy  String?
  url         String?
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  purchases Purchase[]
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
